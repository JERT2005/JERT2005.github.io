---
// Astro component
import '../../../styles/header.css';
const { origin } = Astro.props;
import Logo from '../../../components/Logo.astro';
import LanguagePicker from '../../../components/atoms/languagePicker.astro';
---

<header class="header">
  <div class="header__container">
    <Logo name="Juan Esteban Rendón"/>
    
    <!-- LanguagePicker para pantallas móviles -->
    <div class="language-picker-mobile">
      <LanguagePicker />
    </div>

    <nav class="links" tabindex="0.1">
      <button class="menu__btn">Menú</button>
      <ul class="header__list">
        {
          origin.map((data) => (
            <li>
              <a class="menu__link" href={data.link}>
                <span class="icon__container">
                  <iconify-icon
                    class="icons"
                    icon={data.icon}
                    width="20"
                    height="20"
                  />
                  {data.content}
                </span>
              </a>
            </li>
          ))
        }
      </ul>
      
      <!-- LanguagePicker para pantallas grandes -->
      <div class="language-picker-desktop">
        <LanguagePicker />
      </div>
    </nav>
  </div>
</header>
