---

const { href, texto } = Astro.props;

---

<a class="text-white bg-blue-400 button" href={href}>{texto}</a>

<style>
	.button {
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 1.1rem 2.2rem;
	
		border-radius: 100px;
		font-size: var(--text-x-large);
		transition: 0.35s opacity;
		max-width: max-content;
		opacity: 0.7;
	
	}
	.button:hover {
		opacity: 1.0;
	}
	.button:active {
		opacity: 0.5;
	}
	@media screen and (max-width: 768px) {
		.button {
			display: none;
		}
	}
</style>
